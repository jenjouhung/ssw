    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: unissw_dila",
            "type": "python",
            "request": "launch",
            "program": "unissw_dila.py",
            "args": [
                "-c",
                "config.json",
                "-t",
                "batch-data/in/task.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Python: unissw.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/unissw.py",
            "args": [
                "-pd",
                "-c",
                "config.json",
                "data/pair1.tsv"

            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python launch",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "pythonPath": "/usr/bin/python3",
            "program": "${workspaceRoot}/unissw.py",
            "args": [
                "-pv",
                "data/pair1.tsv"
            ],
            "cwd": "",
            "console": "externalTerminal",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        },
        {
            "name": "GDB Attach proc 0",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/bin/python3",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        }
    ]
}